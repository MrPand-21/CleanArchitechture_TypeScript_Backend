{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "target": "es2020",
  "module": "commonjs",
  "moduleResolution": "node",
  "strict": true,
  "alwaysStrict": true,
  "lib": [
    "es2020"
  ],
  "types": [
    "node",
    "jest",
    "reflect-metadata"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "rootDirs": [
      "./src"
    ],
    "outDir": "./build"
  },
  "paths": {
    "@core/*": [
      "src/core/*"
    ],
    "@infrastructure/*": [
      "src/infrastructure/*"
    ],
    "@application/*": [
      "src/app/*"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}